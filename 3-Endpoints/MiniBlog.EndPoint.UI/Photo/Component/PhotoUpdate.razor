@page "/photo/update/{PhotoId}"
<h3>ویرایش تصویر</h3>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="Name" class="control-label">عنوان</label>
            <input for="Name" class="form-control" @bind="@model.Title" />
        </div>
        <div class="form-group">
            <label for="Name" class="control-label">تصویر</label>
            <input for="Name" class="form-control" @bind="@model.ImageUrl" />
        </div>
        <div class="form-group mt-2">
            <input type="button" value="ویرایش" @onclick="@Update" class="btn btn-primary" />
        </div>
    </div>
</div>