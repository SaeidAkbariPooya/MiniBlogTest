@page "/category/update/{CategoryId}"
<h3>ویرایش دسته بندی</h3>

<div class="row">
    <div class="col-md-4">
            <div class="form-group">
                <label for="Name" class="control-label">عنوان</label>
                <input for="Name" class="form-control" @bind="@model.Title" />
